<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.objectFactory" value="spring" />

	<!-- Add packages here -->

	<package name="default" extends="struts-default">

		<action name="users" class="de.hska.vislab.webshop.ui.controller.UserAction"
			method="execute">
			<result name="success">/users.jsp</result>
		</action>
		<!-- Login: -->
		<action name="login" class="de.hska.vislab.webshop.ui.controller.LoginAction">
			<result name="success">/pages/start.jsp</result>
			<result name="input">index.jsp</result>
		</action>

		<!-- Register: -->
		<action name="register"
			class="de.hska.vislab.webshop.ui.controller.RegisterAction">
			<result name="success" type="redirect">/index.jsp</result>
			<result name="input">/pages/register.jsp</result>
		</action>

		<!-- List all products -->
		<action name="listAllProducts"
			class="de.hska.vislab.webshop.ui.controller.ListAllProductsAction">
			<result name="success">/pages/start.jsp</result>
			<result name="input" type="redirect">LogoutAction</result>
		</action>

		<!-- Logout: -->
		<action name=""
			class="de.hska.vislab.webshop.ui.controller.LogoutAction">
			<result name="success">/index.jsp</result>
		</action>

		<!-- Search: -->
		<action name="SearchAction"
			class="de.hska.vislab.webshop.ui.controller.SearchAction">
			<result name="success">/pages/start.jsp</result>
			<result name="input">/pages/start.jsp</result>
		</action>

		<!-- Init Category: -->
		<action name="InitCategorySiteAction"
			class="de.hska.vislab.webshop.ui.controller.InitCategorySiteAction">
			<result name="input">/pages/start.jsp</result>
			<result name="successC">/pages/categories.jsp</result>
			<result name="successP">/pages/product_add.jsp</result>
		</action>

		<!-- Product Details: -->
		<action name="ProductDetailsAction"
			class="de.hska.vislab.webshop.ui.controller.ProductDetailsAction">
			<result name="success">/pages/product_details.jsp</result>
			<result name="input" type="redirect">listAllProducts</result>
		</action>

		<!-- Add Product: -->
		<action name="AddProductAction"
			class="de.hska.vislab.webshop.ui.controller.AddProductAction">
			<result name="success" type="redirect">listAllProducts</result>
			<result name="input">/pages/product_add.jsp</result>
		</action>

		<!-- Delete Product: -->
		<action name="DeleteProductAction"
			class="de.hska.vislab.webshop.ui.controller.DeleteProductAction">
			<result name="success" type="redirect">listAllProducts</result>
			<result name="input" type="redirect">listAllProducts</result>
		</action>

		<!-- Add Category: -->
		<action name="AddCategoryAction"
			class="de.hska.vislab.webshop.ui.controller.AddCategoryAction">
			<result name="success">/pages/categories.jsp</result>
			<result name="input">/pages/categories.jsp</result>
		</action>

		<!-- Delete Category: -->
		<action name="DeleteCategoryAction"
			class="de.hska.vislab.webshop.ui.controller.DeleteCategoryAction">
			<result name="input" type="redirect">LogoutAction</result>
			<result name="success">/pages/categories.jsp</result>
		</action>

	</package>

</struts>
